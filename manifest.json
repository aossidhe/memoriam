{
    "manifest_version": 2,
    "name":    "Memoriam",
    "version": "0.0",
    "description": "Won't kill your family!",
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["https://*.youtube.com/*"],
        "js":      ["content.js"]
    }],
    "browser_action": {
        "default_title": "Test Extension"
    },

    "permissions": ["activeTab"]
}
